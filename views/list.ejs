<%- include('partials/header'); -%>


<div class="main-container">
    <div id="login"></div>
    <div id="heading" class="box">
        <img src="/images/headerIcon.png" alt="Image not found" width="30px" height="30px" draggable="false">
        <h1>To Do List</h1>
    </div>
    <div class="box">

        <% list.forEach( function(item, index){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" onchange="this.form.submit()" name="delItem" value=" <%=index%>">
                    <p><%= item %></p>
                </div>  
            </form>
        
    <% }) %>
        <form action="/add" class="item" method="post">
            <input type="text" name="newItem" placeholder="Enter new item here" autofocus>
            <button class="my-btn" type="submit">+</button>
        </form>
    </div>
</div>
<%- include('partials/footer'); -%>